<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Scroll Website</title>
    <link rel="stylesheet" href="styles.css" />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.14.0/css/all.css"
      integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Navbar Section -->
    <nav class="navbar">
      <div class="navbar__container">
        <a href="#home" id="navbar__logo">PHD</a>
        <div class="navbar__toggle" id="mobile-menu">
          <span class="bar"></span> <span class="bar"></span>
          <span class="bar"></span>
        </div>
        <ul class="navbar__menu">
          <li class="navbar__item">
            <a href="#home" class="navbar__links" id="home-page">Home</a>
          </li>
          <% if(isAuth){ %>
            <li class="navbar__item">
              <a href="/corrector/correctorPage" class="navbar__links" id="home-page">Corrector</a>
            </li>
          <% } %> 
          <li class="navbar__item">
            <a href="#about" class="navbar__links" id="about-page">About</a>
          </li>
          <li class="navbar__item">
            <a href="#services" class="navbar__links" id="services-page">Specialty's</a>
          </li>
          <li class="navbar__item">
            <a href="#halls" class="navbar__links" id="services-page">halls</a>
          </li>
          <% if(isAuth){ %>
            <li class="navbar__btn">
              <a href="/auth/logout" class="button" id="signup">LogOut</a>
            </li>
          <% } %> 
        </ul>
      </div>
    </nav>
    <!-- Hero Section -->
    <div class="hero" id="home">
      <div class="hero__container">
        <h1 class="hero__heading">Ph.D.  <span>Yes, we can</span></h1>
        <p class="hero__description">Find all specialties</p>
        <button class="main__btn" id="getResult"><a href="#" >get Result</a></button>
      </div>
    </div>
    <div id="dialog" style="display: none;">
        <form action="/home/getResult" method="post">
          <input type="number" name="candidateNumber" id="inputId" placeholder="enter your number candidate"/>
          <button id="result"  type="submit">getResult</button>
        </form>
        <button id="cancel">cancel</button>
    </div>
    <script>
      const dialog=document.getElementById('dialog');
      const getResult=document.getElementById('getResult');
      const cancel=document.getElementById('cancel');
      getResult.onclick=function(){
        dialog.setAttribute('style','display:flex')
      }
      cancel.onclick=function(){
        dialog.setAttribute('style','display:none')
      }
    </script>
    <!-- About Section -->
    <div class="main" id="about">
      <div class="main__container">
        <div class="main__img--container">
          <div class="main__img--card"><i class="fas fa-layer-group"></i></div>
        </div>
        <div class="main__content">
          <h1>What do we do?</h1>
          <h2>We help businesses scale</h2>
          <p>Schedule a call to learn more about our services</p>
          <button class="main__btn"><a href="#">Schedule Call</a></button>
        </div>
      </div>
    </div>

    <!-- Services Section -->

    <div class="services" id="services">
      <h1>Our Services</h1>
      <div class="services__wrapper">
        <% for(specialty of specialties){ %>
          <div class="services__card" href>
            <h2>Specialty</h2>
            <p><%=specialty.nameSpecialty%></p>
            <div class="services__btn"><button><a href="#<%=specialty.nameSpecialty%>">Get Started</a></button></div>
          </div>
        <% } %> 
      </div>
    </div>

    <!-- Features Section -->
    <div class="main" id="sign-up">
      <div class="main__container">
        <div class="main__content">
          <h1>Join Our Team</h1>
          <h2>Sign Up Today</h2>
          <p>See what makes us different</p>
          <button class="main__btn"><a href="#">Sign Up</a></button>
        </div>
        <div class="main__img--container">
          <div class="main__img--card" id="card-2">
            <i class="fas fa-users"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="halls" id="halls">
      <% for(hall of halls){ %>
        <div class="hall" style="border: 3px solid black;">
          <div class="headerHoll">
            <h3>specialties : <%=hall.candidates[0].Speciality%></h3>
            <h3>localization : <%=hall.localization%></h3>
            <h3>capacity : <%=hall.capacity%></h3>
          </div>
          <div class="candidates">
            <p id="<%=hall.candidates[0].Speciality%>"></p>
            <% for(candidate of hall.candidates){ %>
              <table border="1px" class="candidateTable">
                <tbody>
                  <td>First_name : <%=candidate.First_name%></td>
                  <td>Last_name : <%=candidate.Last_name%></td>
                  <td>Candidate_number : <%=candidate.Candidate_number%></td>
                </tbody>
              </table>
            <% } %> 
          </div>
        </div>
      <% } %> 
    </div>
    <!-- Footer Section -->
    <div class="footer__container">
      <div class="footer__links">
        <div class="footer__link--wrapper">
          <div class="footer__link--items">
            <h2>About Us</h2>
            <a href="/sign__up">How it works</a> <a href="/">Testimonials</a>
            <a href="/">Careers</a> <a href="/">Terms of Service</a>
          </div>
          <div class="footer__link--items">
            <h2>Contact Us</h2>
            <a href="/">Contact</a> <a href="/">Support</a>
            <a href="/">Destinations</a>
          </div>
        </div>
        <div class="footer__link--wrapper">
          <div class="footer__link--items">
            <h2>Videos</h2>
            <a href="/">Submit Video</a> <a href="/">Ambassadors</a>
            <a href="/">Agency</a>
          </div>
          <div class="footer__link--items">
            <h2>Social Media</h2>
            <a href="/">Instagram</a> <a href="/">Facebook</a>
            <a href="/">Youtube</a> <a href="/">Twitter</a>
          </div>
        </div>
      </div>
      <section class="social__media">
        <div class="social__media--wrap">
          <div class="footer__logo">
            <a href="/" id="footer__logo">PHD</a>
          </div>
          <p class="website__rights">Â© PHD 2020. All rights reserved</p>
          <div class="social__icons">
            <a href="/" class="social__icon--link" target="_blank"
              ><i class="fab fa-facebook"></i
            ></a>
            <a href="/" class="social__icon--link"
              ><i class="fab fa-instagram"></i
            ></a>
            <a href="/" class="social__icon--link"
              ><i class="fab fa-youtube"></i
            ></a>
            <a href="/" class="social__icon--link"
              ><i class="fab fa-linkedin"></i
            ></a>
            <a href="/" class="social__icon--link"
              ><i class="fab fa-twitter"></i
            ></a>
          </div>
        </div>
      </section>
    </div>

    <script src="app.js"></script>
    
  </body>
</html>
